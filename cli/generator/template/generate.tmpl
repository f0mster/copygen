{{- define "JoinFields"}}
	{{- range $key, $Type := . -}}
		{{- if ne $key 0}}, {{end -}}
		{{- $Type.Field.Name -}}
	{{- end -}}
{{end -}}
{{- define "JoinParameters"}}
    {{- range $key, $Type := . -}}
		{{- if ne $key 0}}, {{end}}{{- $Type.Field.VariableName}} {{$Type.ParameterName}}
	{{- end -}}
{{end -}}

{{- define "CopySlice" -}}
    make([]{{.Pointer}}
    {{- if ne .Package "" -}} {{.Package}}. {{- end -}}
    {{.Definition}}, len({{.From.FullVariableName ""}}))
    for key, val := range {{.From.FullVariableName ""}} {
        {{.FullVariableName ""}}[key] =
        {{- if eq .Definition .From.Definition -}}
            val
        {{- else -}}
            {{- if ne .Package "" -}} {{.Package}}. {{- end -}}
            {{.Definition}}(val)
        {{- end -}}
    }
{{- end -}}

